class Solution {
    public int SmallestSacredWindow(int k, int[] nums) {
        int left=0,right=0,sum=0;
        int minlen=Integer.MAX_VALUE;
        
        while(right<nums.length ){
           
                sum+=nums[right];
                right++;
                
            

            while(sum>=k){
                minlen=Math.min(right-left,minlen);
                sum-=nums[left];
                left++;
                
            }
            
        }

        return minlen!=Integer.MAX_VALUE?minlen:-1;
    }
}

