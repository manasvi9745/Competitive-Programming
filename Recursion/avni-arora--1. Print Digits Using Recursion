#include <iostream>

    void printDigits (int n){
        if (n<10) std::cout<<n<<" ";
        else{
            printDigits(n/10);
            std::cout<< n%10 << " ";
        }
}


int main() {
    int a = 1234;
    printDigits(a);
    std::cout << std::endl;
    
    int b = 9;
    printDigits(b);
    std::cout;
    
}
